@page
@model Memberlogin
@{
    ViewData["Title"] = "Member Login";
}
<html>
 <head>
  <title>
   Login Page
  </title>
  <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/> -->
  <style>
   body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            
        }
        .container img {
            width: 80px;
            margin-bottom: 20px;
        }
        .container h2 {
            margin: 0;
            font-size: 24px;
            color: #333;
        }
        .container p {
            color: #666;
            margin-bottom: 20px;
        }
        .container input[type="text"],
        .container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        /* .container .remember-me {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin: 10px 0;
        } */
        /* .container .remember-me input {
            margin-right: 10px;
        }
        .container .remember-me label {
            margin: 0;
            color: #666;
        } */
        .container .links {
            color: #666;
            text-decoration: none;
        }
        .container .links:hover {
            text-decoration: underline;
        }
       
       
        .container button {
            width: 100%;
            padding: 10px;
            background-color: #4a6cf7;
            border: none;
            border-radius: 4px;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
        }
        .container button:hover {
            background-color: #3a5cd7;
        }
        form{
            padding: 50px 35px;
        }

        
  </style>
 </head>
 <body>
  <div class="container">
   <h1>Member Login</h1>
   <form>
    <p>Please log in to your account</p>
    <input placeholder="Member Id" required="" type="text"/>
    <input placeholder="Password" required="" type="password"/>
    <!-- <div class="remember-me">
     <label>
      <input type="checkbox"/>
      Remember Me
     </label>
     
     
    </div> -->

    <div class="links">
        <p><a href="#">Forgot Password ?</a></p>
        <p><a href="#">Forgot MemberId ?</a></p>
        <p><a href="#">Not a Member ?</a></p>
    </div>
    <button type="submit">
     Log in
    </button>
   </form>
   
  </div>
 </body>
</html> 
